{
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  },
  "prettier/prettier": [
    "error",
    {
      "singleQuote": true,
      "parser": "flow",
      "usePrettierrc": false,
      "fileInfoOptions": {
        "withNodeModules": true
      }
    }
  ]
}

